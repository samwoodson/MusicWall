<h3 class="text-center">Songs you've added:</h3>


<% @songs.each do |song| %>
  <% if song.youtube_embed %>
    <div class="container">
      <div class="song text-center">
        <h3><a href="/songs/<%= song.id %>"><%= song.title %></a> <small>(Artist: <%= song.artist %>) Votes:<%= current_votes(song.id)%></small></h3>
        <div id='videoclipframe' class="embed-responsive embed-responsive-16by9">
          <iframe width="560" height="315" src="<%=song.link%>" frameborder="0" allowfullscreen> </iframe>
        </div>
      </div>
    </div>
  <% else %>
    <div class="container-fluid">
      <div class="song text-center">
        <h3><a href="/songs/<%= song.id %>"><%= song.title %></a> <small>(Artist: <%= song.artist %>)</small></h3>
        <a href="<%=song.link%>" class="btn btn-info" role="button">Link To Non-Youtube Video</a>
      </div>
    </div>
  <% end %>
<% end %>